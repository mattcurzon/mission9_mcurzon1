
@{
}

@model IEnumerable<string>

@*created button group that extends the length of the parent*@
<div class="btn-group-vertical btn-block" style="max-width: 400px">
    <a asp-controller="Home" asp-action="Index" asp-route-category="" asp-route-pageNum="" class="btn btn-outline-secondary">Home</a>
    <br />

    @foreach (string c in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-category="@c" asp-route-pageNum="1"
           class="btn @(ViewBag.SelectedCategory == c ? "btn-primary" : "btn-outline-secondary")">@c</a>
        <br />
    }
</div>
